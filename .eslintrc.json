{
  "extends": "./node_modules/gts/",
  "env": {
    "es2021": true,
    "mocha": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "camelcase": ["error"],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-console": ["error"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["mongodb-memory-server"]
      }
    ],
    "node/no-extraneous-require": [
      "error",
      {
        "allowModules": ["mongodb-memory-server"]
      }
    ]
  }
}
